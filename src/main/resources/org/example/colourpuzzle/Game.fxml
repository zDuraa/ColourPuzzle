         <Label layoutX="78.0" layoutY="5.0" text="Zeit" />
      </children>
   </Pane>
   <HBox id="GlassContainer" fx:id="glassContainer" alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <VBox id="Bottle1" fx:id="Bottle1" alignment="BOTTOM_CENTER" onMouseClicked="#handleVBoxClick" prefHeight="248.0" prefWidth="100.0" styleClass="vbox-border" stylesheets="@style.css" />
         <VBox id="Bottle2" fx:id="Bottle2" alignment="BOTTOM_CENTER" onMouseClicked="#handleVBoxClick" prefHeight="248.0" prefWidth="100.0" styleClass="vbox-border" stylesheets="@style.css" />
         <VBox id="Bottle3" fx:id="Bottle3" alignment="BOTTOM_CENTER" onMouseClicked="#handleVBoxClick" prefHeight="248.0" prefWidth="100.0" styleClass="vbox-border" stylesheets="@style.css" />
         <VBox id="Bottle4" fx:id="Bottle4" alignment="BOTTOM_CENTER" onMouseClicked="#handleVBoxClick" prefHeight="248.0" prefWidth="100.0" styleClass="vbox-border" stylesheets="@style.css" />
      </children>
   </HBox>
</VBox>
